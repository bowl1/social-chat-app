{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": "src",
    "paths": {
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@client/*": ["client/*"],
      "@styles/*": ["styles/*"],
      "@styles/responsive": ["styles/responsive"],
      "@types/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@store/*": ["store/*"],
      "assets/*": ["assets/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
